<h1>IdeaBox</h1>

<form action="/<%= idea.id %>" method='POST'>
  <p>
  	<% if idea.id %>
    	Edit your Idea:
    <% else %>
    	Your Idea:
    <% end %>
  </p>
  <% if idea.id %>
		<input type="hidden" name="_method" value="PUT" />
	<% end %>
  Name: <input type='text' name='idea[title]' value="<%= idea.title %>"/><br/>
  Description: <textarea name='idea[description]'><%= idea.description %></textarea><br/>
  Tags: <textarea name='idea[tags]'><%= idea.tags.join(',') %></textarea><br/>
  Group: <select name="idea[group]">
			    <% groups.each do |group| %>
			      <option value="<%= group["name"] %>"><%= group["name"] %></option>
			    <% end %>
			  </select>
  <input type='submit'/>
</form>
