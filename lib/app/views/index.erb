<h1>IdeaBox</h1>
<form action='/' method='POST'>
  <p>
  Your Idea:
  </p>
  Name:
  <input type='text' name='idea[title]'/><br/>
  Description:
  <textarea name='idea[description]'></textarea><br/>
  Tags:
  <textarea name='idea[tags]'></textarea><br/>
  Group:
  <select name="idea[group]">
    <% groups.each do |group| %>
      <option value="<%= group["name"] %>"><%= group["name"] %></option>
    <% end %>
  </select>
  <input type='submit'/>
</form>

<form action="/groups" method="GET">
  <input type="submit" value="Edit Groups"/>
</form>

<h3>Existing Ideas</h3>

<ul>
  <% ideas.each do |idea| %>
    <li>
      Name: <%= idea.title %><br/>
      Description: <%= idea.description %><br/>
      Score: <%= idea.rank %><br/>
      Tags: <% idea.tags.each do |tag| %>
            <a href="/tag/<%= tag %>"><%=tag%></a>
            <% end %><br/>
      Group: <a href="/group/<%= idea.group %>"><%=idea.group%></a><br/>

      <a href="/<%= idea.id %>/edit">Edit</a>
      <form action='/<%= idea.id %>/like' method='POST' style="display: inline">
        <input type='submit' value="+"/>
      </form>
      <form action='/<%= idea.id %>/dislike' method='POST' style="display: inline">
        <input type='submit' value="-"/>
      </form>
      <form action="/<%= idea.id %>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="delete"/>
      </form>
    </li>
  <% end %>
</ul>

<form action="/tag_sort" method="GET">
  <input type="submit" value="Sort By Tags"/>
</form>
